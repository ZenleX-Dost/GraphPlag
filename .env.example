# Environment configuration for GraphPlag

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Security
API_KEY_DEMO=demo_key_123
SECRET_KEY=your-secret-key-here-change-in-production

# Cache Configuration
ENABLE_CACHE=true
CACHE_DIR=.cache
CACHE_MAX_SIZE_MB=500
CACHE_MAX_AGE_DAYS=30

# Processing Configuration
ENABLE_CHUNKING=true
MAX_CHUNK_SIZE=1000
MAX_FILE_SIZE_MB=50

# Model Configuration
EMBEDDING_MODEL=paraphrase-multilingual-mpnet-base-v2
DEFAULT_METHOD=kernel
DEFAULT_THRESHOLD=0.7

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/graphplag.log

# Database (Optional - for future use)
